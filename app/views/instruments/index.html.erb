<div class="banner"><h1>Musical's</h1></div>
  <div class="container">
    <h2 class="head-title">Choose your tone:</h2>
      <%if user_signed_in? %>
        <%@myinstruments = Instrument.all.select { |instrument| instrument.user_id == current_user.id}%>
        <%@othersinstruments = @instruments.reject { |inst| @myinstruments.include? inst } %>
        <div class="row">
          <div class="col-9">
            <div class="row">
              <%@othersinstruments.each do |instrument| %>
                <div class="col-3">
                  <div class="card">
                    <div class="pic"><%=cl_image_tag instrument.photo.key, height: 152, width: 152, crop: :fill%>
                      <div class="price-tag"><strong>Price: </strong><%= price_mask_real(instrument.price) %></div>
                    </div>
                    <h4><%= link_to instrument.name, instrument %></h4>
                  </div>
                    <br>
                </div>
              <%end%>
            </div>
          </div>
          <div class="col-3">
            <div class="my-cards-area">
              <h4>My instruments</h4>
              <% @myinstruments.each do |instrument| %>
              <div class="card">
                <div class="pic"><%=cl_image_tag instrument.photo.key, height: 160, width: 160, crop: :fill%>
                  <div class="price-tag"><strong>Price: </strong><%= price_mask_real(instrument.price) %></div>
                </div>
                <h4><%= link_to instrument.name, instrument %></h4>
                <div class="manager_area">
                  <div><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                  <div><%= link_to 'Edit', edit_instrument_path(instrument) %></div>
                </div>
              </div>
              <%end%>
            </div>
          </div>
      <%else%>
      <div class="row">
        <%@instruments.each do |instrument| %>
        <div class="col-3">
          <div class="card">
            <div class="pic"><%=cl_image_tag instrument.photo.key, height: 223, width: 223, crop: :fill%>
              <div class="price-tag"><strong>Price: </strong><%= price_mask_real(instrument.price) %></div>
            </div>
            <h4><%= link_to instrument.name, instrument %></h4>
          </div>
        </div>
        <%end%>
      <%end%>
</div>
