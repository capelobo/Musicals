
<p id="notice"><%= notice %></p>

<h1>Check all Instruments</h1>

<%if user_signed_in? %>
<%@myinstruments = Instrument.all.select { |instrument| instrument.user_id == current_user.id}%>

  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @myinstruments.each do |instrument| %>
        <tr>
          <td><%=cl_image_tag instrument.photo.key, height: 50, width: 50, crop: :fill%></td>
          <td><%= link_to instrument.name, instrument %></td>
          <td><%= price_mask_real(instrument.price) %></td>
          <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        </tr>
      <%end%>
    </tbody>
  <br>

  <%@othersinstruments = @instruments.reject { |inst| @myinstruments.include? inst } %>
  <% if @othersinstruments != nil %>
    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
        <%@othersinstruments.each do |instrument| %>
        <tr>
          <td><%=cl_image_tag instrument.photo.key, height: 50, width: 50, crop: :fill%></td>
          <td><%= link_to instrument.name, instrument %></td>
          <td><%= price_mask_real(instrument.price) %></td>
        </tr>
        <% end %>
      <%end%>
    </tbody>
  </table>
  <br>
<br>
<%else%>
  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%@instruments.each do |instrument| %>
      <tr>
         <td><%=cl_image_tag instrument.photo.key, height: 50, width: 50, crop: :fill%></td>
        <td><%= link_to instrument.name, instrument %></td>
        <td><%= price_mask_real(instrument.price) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%end%>
<br>
