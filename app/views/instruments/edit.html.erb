<div class="form-page">
<h1>Edit Your Instrument</h1>
<div class="col-6">
     <%=cl_image_tag @instrument.photo.key, class: "cld-responsive picture_big" %>
</div>
<%= simple_form_for (@instrument) do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description, input_html: {id: "txt-camp"} %>
  <label class="photobtn">
    Upload Instrument photo
    <span style="display:none;">
      <%= f.file_field :photo%>
    </span>
  </label>
  <br>
  <br>
  <%= f.submit "Update", :class => "photobtn main_button" %>
  <% end %>
</div>
<br>

